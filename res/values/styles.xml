<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        
    </style>

    <style name="NoTitleAppTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Fullscreen Page Theme -->
    <style name="FullscreenPage" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">?android:windowNoTitle</item>
    </style>

    <style name="AppTextStyle">
        <item name="android:gravity">center_vertical</item>        
    </style>

    <style name="ContentTextStyle" parent="AppTextStyle">
        <item name="android:textColor">@color/content_text_color</item>
        <item name="android:textSize">@dimen/content_text_size</item>
    </style>

    <string name="TitleTextStyle" parent="AppTextStyle">
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </string>
</resources>
